#   Daniel (dmilith) Dettlaff
#   Tymon (teamon) Tobolski

WORD="$1"
export CODE="scala"
    if [ "$2" != "" ]; then
        export CODE="$2" # param: code type. By default "scala"
    fi
export WORKING_DIR="$TM_PROJECT_DIRECTORY"
    if [ "$WORKING_DIR" = "" ]; then
        WORKING_DIR="$(pwd)"
    fi
export PATTERN="(new|with|\=)(\s+)${WORD}"
export LIST=""
for code in $CODE; do
    export LIST="$(find "$WORKING_DIR" -name "*.${code}") $LIST"
done


export sub="var entries = ["
    for element in $LIST; do
        ENTRIES="$(grep -iP -n "${PATTERN}" $element)"
        if [ "$ENTRIES" != "" ]; then
            export sub="$sub{file: '$element', entries: '${ENTRIES}'}, "
        fi
    done
sub="$sub]; var tmdir = '$TM_PROJECT_DIRECTORY'; var pattern = '$PATTERN';"
echo "$sub" | tr -d '\n'